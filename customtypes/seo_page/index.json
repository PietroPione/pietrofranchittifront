              "type": "SharedSlice"
            },
            "seo_service_blocks": {
              "type": "SharedSlice"
            },
            "seo_technologies": {
              "type": "SharedSlice"
            },
            "seo_action_links": {
              "type": "SharedSlice"
            },
            "seo_examples_grid": {
              "type": "SharedSlice"
            },
            "seo_kpi_groups": {
              "type": "SharedSlice"
            },
            "seo_budget_table": {
              "type": "SharedSlice"
